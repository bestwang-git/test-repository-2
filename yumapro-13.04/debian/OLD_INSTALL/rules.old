#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# package release (TBD: get from debian variables somehow)
#export MY_VER=13.04

# set to the package release number, 2 for v12.09-2
export MY_REL=1

# common make parameters
export CPARMS=PRODUCTION=1 WITH_CLI=1 WITH_YANGAPI=1 DEBIAN=1 RELEASE=$(MY_REL)

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	(cd libtecla; ./configure --prefix=$(CURDIR)/debian/yumapro; cd ..)
	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp  
	dh_testdir

	# Add here commands to compile the package.
	# !!! no longer using FULL_STATIC=1 STATIC=1 !!!
	$(MAKE) $(CPARMS) DEBIAN_MAKE=1
	$(MAKE) $(CPARMS) DEBIAN_MAKE=1 DOC=1

	#docbook-to-man debian/yumapro.sgml > yumapro.1

	touch $@

clean: 
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	(cd libtecla; ./configure --prefix=$(CURDIR)/debian/yumapro; cd ..)
	$(MAKE) $(CPARMS) DESTDIR=$(CURDIR)/debian/yumapro clean
	$(MAKE) $(CPARMS) DEVELOPER=1 DESTDIR=$(CURDIR)/debian/yumapro-dev clean
	$(MAKE) $(CPARMS) SERVER=1 DESTDIR=$(CURDIR)/debian/yumapro-server clean
	$(MAKE) $(CPARMS) DOC=1 SERVER=1 DESTDIR=$(CURDIR)/debian/yumapro-server-doc clean
	$(MAKE) $(CPARMS) CLIENT=1 DESTDIR=$(CURDIR)/debian/yumapro-client clean
	$(MAKE) $(CPARMS) DOC=1 CLIENT=1 DESTDIR=$(CURDIR)/debian/yumapro-client-doc clean
	$(MAKE) $(CPARMS) MODULES=1 DESTDIR=$(CURDIR)/debian/yumapro-modules clean
	$(MAKE) $(CPARMS) SHLIB_NCX=1 DESTDIR=$(CURDIR)/debian/libyumapro-ncx clean
	$(MAKE) $(CPARMS) DOC=1 DESTDIR=$(CURDIR)/debian/yumapro-common-doc clean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_prep  
	dh_installdirs

	# Add here commands to install the packages
	$(MAKE) $(CPARMS) DEVELOPER=1 DESTDIR=$(CURDIR)/debian/yumapro-dev install
	$(MAKE) $(CPARMS) SERVER=1 DESTDIR=$(CURDIR)/debian/yumapro-server install
	$(MAKE) $(CPARMS) DOC=1 SERVER=1 DESTDIR=$(CURDIR)/debian/yumapro-server-doc install
	$(MAKE) $(CPARMS) CLIENT=1 DESTDIR=$(CURDIR)/debian/yumapro-client install
	$(MAKE) $(CPARMS) DOC=1 CLIENT=1 DESTDIR=$(CURDIR)/debian/yumapro-client-doc install
	$(MAKE) $(CPARMS) MODULES=1 DESTDIR=$(CURDIR)/debian/yumapro-modules install
	$(MAKE) $(CPARMS) SHLIB_NCX=1 DESTDIR=$(CURDIR)/debian/libyumapro-ncx install
	$(MAKE) $(CPARMS) DOC=1 DESTDIR=$(CURDIR)/debian/yumapro-common-doc install

postinst: 
	#ldconfig
	#echo "*** did ldconfig ***"

# Build architecture-independent files here.
binary-indep: install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
