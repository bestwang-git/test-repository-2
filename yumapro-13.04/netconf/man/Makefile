# Makefile for YumaPro man directory
#  
#   man directory

ifndef PREFIX
 PREFIX=/usr
endif

MAN_INSTALL = $(DESTDIR)$(PREFIX)/share/man/man1
MAN_FILES = 

# the WEB pages generated are invalid HTML and not usable
# TBD: update HTML man page generation
WEB_INSTALL = $(DESTDIR)/$(HOME)/MAN_WEBPAGES

ifdef DEBIAN

 ifdef DEVELOPER
MAN_FILES = make_sil_dir_pro.1
 endif # DEVELOPER

 ifdef CLIENT
MAN_FILES = yangcli-pro.1
 endif # CLIENT

 ifdef SERVER
MAN_FILES = yangdump-pro.1 yangdiff-pro.1 netconfd-pro.1 \
	netconf-subsystem-pro.1 yp-shell.1 yang-api.1 make_sil_dir_pro.1
 endif # SERVER

 ifdef EVAL
MAN_FILES = yangcli-pro.1 netconfd-pro.1 netconf-subsystem-pro.1
 endif # EVAL

 ifdef BUILD_ALL
MAN_FILES = yangdump-pro.1 yangdiff-pro.1 netconfd-pro.1 \
	netconf-subsystem-pro.1 yp-shell.1 yang-api.1 yangcli-pro.1 \
	make_sil_dir_pro.1
 endif # BUILD_ALL

else
 ifdef EVAL
MAN_FILES = netconfd-pro.1 netconf-subsystem-pro.1 yangcli-pro.1
 else
  # normal build
MAN_FILES = yangdump-pro.1 yangdiff-pro.1 yangcli-pro.1 \
	netconfd-pro.1 netconf-subsystem-pro.1 make_sil_dir_pro.1 \
	yp-shell.1 yang-api.1
 endif # EVAL
endif  # DEBIAN

all:

depend:

clean:

superclean:

uninstall:
	for fil in $(MAN_FILES); do \
	  rm -f $(MAN_INSTALL)/$$fil.gz;\
	done

install:
	mkdir -p $(MAN_INSTALL)
	for fil in $(MAN_FILES); do \
	  gzip -c $$fil > $(MAN_INSTALL)/$$fil.gz;\
	done

webinstall:
	mkdir -p $(WEB_INSTALL)
	for fil in $(MAN_FILES); do \
	  groff -mandoc -mwww -Thtml $$fil > $(WEB_INSTALL)/$$fil.html;\
	done

distclean: superclean


.PHONY: all clean depend superclean install distclean uninstall webinstall

# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:



