# Makefile for YumaPro etc directory
#  
#   etc directory

ifndef ETC_PREFIX
 ETC_PREFIX=/etc
endif # ETC_PREFIX

ETC_INSTALL = $(DESTDIR)$(ETC_PREFIX)/yumapro

all:

depend:

clean:

uninstall:
	rm -rf $(ETC_INSTALL)

superclean: clean

TARGETS=

ifdef EVAL
TARGETS = install-dir install-eval
else 
 ifndef DEBIAN
# normal build
TARGETS = install-dir install-server install-client
 else
  # debian package build
  ifdef SERVER
TARGETS = install-dir install-server
  endif # SERVER

  ifdef CLIENT
TARGETS = install-dir install-client
  endif # CLIENT

  ifdef BUILD_ALL
TARGETS =  install-dir install-server install-client
  endif # BUILD_ALL

 endif # DEBIAN
endif # EVAL

install: $(TARGETS)

install-dir:
	mkdir -p $(ETC_INSTALL)

install-server:
	cp netconfd-pro-sample.conf $(ETC_INSTALL)/
	cp yangdiff-pro-sample.conf $(ETC_INSTALL)/
	cp yangdump-pro-sample.conf $(ETC_INSTALL)/

install-eval:
	cp netconfd-pro-sample.conf $(ETC_INSTALL)/
	cp yangcli-pro-sample.conf $(ETC_INSTALL)/

install-client:
	cp yangcli-pro-sample.conf $(ETC_INSTALL)/

distclean: superclean

.PHONY: all clean depend superclean install uninstall distclean \
	install-dir install-server install-client install-eval

# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:



