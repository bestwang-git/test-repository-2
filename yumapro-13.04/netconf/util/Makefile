# Makefile for YumaPro util directory
#  
#   util directory

ifndef PREFIX
    PREFIX=/usr
endif

UTIL_INSTALL = $(DESTDIR)$(PREFIX)/share/yumapro/util

BIN_INSTALL = $(DESTDIR)$(PREFIX)/bin

all:

depend:

clean:

uninstall:
	rm -rf $(UTIL_INSTALL)

superclean: clean

TARGETS=

ifdef DEBIAN
 ifdef DEVELOPER
TARGETS = installfiles
 endif  # DEVELOPER

 ifdef SERVER
TARGETS = installfiles
 endif  # SERVER

 ifdef BUILD_ALL
TARGETS = installfiles
 endif  # BUILD_ALL

else
 ifndef EVAL
TARGETS = installfiles
 endif # EVAL
endif  # DEBIAN

install: $(TARGETS)

installfiles:
	mkdir -p $(UTIL_INSTALL)
	cp makefile.sil $(UTIL_INSTALL)/
	cp makefile-top.sil $(UTIL_INSTALL)/
	mkdir -p $(BIN_INSTALL)
	install $(OWNER) $(GRP) make_sil_dir_pro $(BIN_INSTALL)

distclean: superclean

.PHONY: all clean depend superclean install uninstall distclean \
	installfiles

# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:



