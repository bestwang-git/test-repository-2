# Makefile for YumaPro
#  
#   netconf dir Makefile

##################### LIBRARIES ########################
#
# DIRS:  
# This is an ordered list
# Put only the directories that build object files in the list

ifndef PREFIX
 PREFIX=/usr
endif

DIRS =

# make all targets
ifdef DEBIAN_MAKE
 # this is a debian package build compile phase
DIRS += src modules etc doc man util
else
 ifdef DEBIAN
  # this is a debian package build install phase
  ifdef EVAL
DIRS += src modules etc doc man
  else
   ifdef MODULES
DIRS += modules
   else
DIRS += src etc man

    ifdef DEVELOPER
DIRS += util
    endif # DEVELOPER
    ifdef DOC
DIRS += doc
    endif # DOC
    ifdef SERVER
DIRS += modules doc util
    endif # SERVER
    ifdef CLIENT
DIRS += modules doc
    endif # CLIENT
    ifdef BUILD_ALL
DIRS += modules doc util
    endif # BUILD_ALL
   endif # MODULES
  endif # EVAL
 else
# this is a fedora packaging or normal build
DIRS = src modules etc doc man util
 endif # DEBIAN
endif # DEBIAN_MAKE

ifdef TEST
 DIRS += test
endif

TESTDIRS = modules test

TOP_INSTALL = $(DESTDIR)$(PREFIX)/share/yumapro

#################### PLATFORM DEFINITIONS ############

all: treeall

################################ MAKE RULES #################################

test: treetest

clean: treeclean

superclean: treesuperclean

distclean: treedistclean

install: treeinstall

uninstall: treeuninstall

treeall:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) $(JFLAG) all && cd ..;\
        done

treetest:
	for dir in $(TESTDIRS); do\
	  cd $$dir && $(MAKE) test && cd ..;\
        done

treeclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) clean && cd ..;\
        done

treesuperclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) superclean && cd ..;\
        done

treedistclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) distclean && cd ..;\
        done

treeinstall:
	mkdir -p $(TOP_INSTALL)
ifndef DEVELOPER
 ifndef CLIENT
  ifndef SERVER
	mkdir -p $(TOP_INSTALL)/modules
  endif # SERVER
 endif # CLIENT
endif # DEVELOPER
	for dir in $(DIRS); do\
          cd $$dir && $(MAKE) install && cd ..;\
        done


treeuninstall:
	for dir in $(DIRS); do\
          cd $$dir && $(MAKE) uninstall && cd ..;\
        done


.PHONY: all clean superclean distclean install uninstall \
	treeall treeclean treesuperclean treedistclean \
	treeinstall treeuninstall test treetest


# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:



