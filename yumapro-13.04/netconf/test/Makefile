# Makefile for YumaPro
#  
#   test directory Makefile

##################### LIBRARIES ########################
#
# DIRS:  
# This is an ordered list
# Put only the directories that build object files in the list

ifndef PREFIX
    PREFIX=/usr
endif

# make all targets
DIRS = modules integ-tests sys-test

################################ MAKE RULES #################################

all: treeall

test: treetest

clean: treeclean

superclean: treesuperclean

distclean: treedistclean

install:

uninstall:

treeall:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) $(JFLAG) all && cd ..;\
        done

treetest:
	for dir in $(TESTDIRS); do\
	  cd $$dir && $(MAKE) test && cd ..;\
        done

treeclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) clean && cd ..;\
        done

treesuperclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) superclean && cd ..;\
        done

treedistclean:
	for dir in $(DIRS); do\
	  cd $$dir && $(MAKE) distclean && cd ..;\
        done


.PHONY: all clean superclean distclean  \
	treeall treeclean treesuperclean treedistclean \
	treeinstall treeuninstall test treetest


# prevent the make program from choking on all the symbols
# that get generated from autogenerated make rules
.NOEXPORT:



